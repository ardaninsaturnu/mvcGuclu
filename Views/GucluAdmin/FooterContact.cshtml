@using companyproject.Entities
@model List<contact_us_form>

@if (Model != null && Model.Count > 0)
{
    <h5>Footer Contact Form</h5>
    <hr>

    <table id="dtBasicExample" class="table table-striped table-bordered table-sm footerForm" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="th-sm">
                    Name

                </th>

                <th class="th-sm">
                    E-Mail

                </th>
                <th class="th-sm">
                    Message

                </th>
                <th class="th-sm">
                    Delete
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.full_name</td>
                    <td>@item.mail</td>
                    <td>@item.messages</td>
                    <td><button class="btn btn-danger"><i class="far fa-trash-alt"></i></button></td>

                </tr>
            }

        </tbody>

    </table>

}
else
{
    <div class="col-md-12">
        <p class="alert alert-info">Empty</p>
    </div>
}