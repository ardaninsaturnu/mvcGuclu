@using companyproject.ViewModels
@model LoginViewModel
<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="admin Dashboard">

    <link rel="title icon" href="../images/title-img.png">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/all.js" integrity="sha384-xymdQtn1n3lH2wcu0qhcdaOpQwyoarkgLVxC/wZ5q7h9gHtxICrpcaSUfygqZGOe" crossorigin="anonymous"></script>

    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">


    <link href="/Content/admincss/style.css" rel="stylesheet" />

    <!---------------------for book----------------------------->

    <link href="/Content/admincss/book.css" media="(max-width:1366px)" rel="stylesheet" />

    <!--------------------for tablet--------------------------->

    <link href="/Content/admincss/tablet.css" media="(max-width:768px)" rel="stylesheet" />

    <!--------------------for mobile--------------------------->

    <link href="/Content/admincss/mobile.css" media="(max-width:500px)" rel="stylesheet" />

    <title>Admin Dashboard</title>


    <!---------------------for scripts----------------------->

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

    

</head>
<body>
    <div class="login">
        <div class="login-logo">
            <img src="/images/wutlogo.png" alt="">
        </div>


        <div class="login-left">
            <img src="/images/payment-processed-2.png" class="login-img">
        </div>



        <div class="login-right">
            <!--------------------------warning modal------------------------>

            @if (!Html.ViewData.ModelState.IsValid)
            {
            <div class="warning warning">
                <p>@Html.ValidationSummary()</p>
            </div>
            }

            @using (Html.BeginForm(new { @class = "login-form", id = "myForm" }))
            {

            <label for="username">
                Username :
                @Html.TextBoxFor(x => x.Username, new { name = "username", id = "usernameLogin" })
                <p id="errorUsername" class="error"></p>
            </label>
            <label for="password">
                Password :
                @Html.TextBoxFor(x => x.Password, new { name = "password", id = "passwordLogin", type = "password" })
                <p id="errorPassword" class="error"></p>
            </label>
            <a href="" id="submitLink">
                <input type="submit" value="Login">
            </a>



            }


        </div>
        <div class="login-footer">
            <p>&copy; 2020 Copyright. Made With <i class="fas fa-heart text-danger"></i> by <span class="text-success">ardaninsaturnu</span></p>
        </div>

    </div>


    <!----------------------------------- </footer>---------------------------- -->
    <!-------------------------------------<scripts>------------------------------->

    <script src="/Scripts/js/jupiter.js"></script>

</body>
</html>