@using companyproject.Entities
@model List<contact_form>
@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}



@if (Model != null && Model.Count > 0)
{
    <div>
        <h5>Contact Form List</h5>
        <hr>
        <table id="dtBasicExample" class="table table-striped table-bordered table-sm contactForm" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="th-sm">
                        Full Name

                    </th>
                    <th class="th-sm">
                        E Mail

                    </th>
                    <th class="th-sm">
                        Phone Number

                    </th>
                    <th class="th-sm">
                        Subject

                    </th>
                    <th class="th-sm">Message
                    </th>
                    <th class="th-sm">
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.full_name
                        </td>
                        <td>
                            @item.mailAdress
                        </td>
                        <td>
                            @item.Phone
                        </td>
                        <td>
                            @item.subject
                        </td>
                        <td>
                            @item.Messages
                        </td>
                        <td>
                        <button class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                    </td>
                    </tr>
                }
            </tbody>

        </table>


        @{Html.RenderAction("FooterContact", "GucluAdmin");}
    </div>
}
else
{
    {Html.RenderAction("FooterContact", "GucluAdmin");}
}

