@using companyproject.Entities
@model List<index_slider>

@{ 
    int sliderCount = Model.Count;
}


<main class="slider">
    @if (Model != null && Model.Count > 0)
    {
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (int i = 0; i < sliderCount; i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@(i+1)" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@(i+1)"></li>
                    }
                }


            </ol>
            <div class="carousel-inner" role="listbox">
                <!-- Slide One - Set the background image for this slide in the line below -->
                @for (int i = 0; i < sliderCount; i++)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item product-slider active" style="background-image: url('@Model[i].file_path')">
                            <div class="carousel-caption d-none d-md-block">
                                <h2 class="display-4">@Model[i].title</h2>
                                <p class="lead">@Model[i].subtitle</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item product-slider" style="background-image: url('@Model[i].file_path')">
                            <div class="carousel-caption d-none d-md-block">
                                <h2 class="display-4">@Model[i].title</h2>
                                <p class="lead">@Model[i].subtitle</p>
                            </div>
                        </div>
                    }
                }



                <!-- Slide Two - Set the background image for this slide in the line below -->

            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    }
    </main>